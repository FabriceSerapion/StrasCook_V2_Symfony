{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/error.css">
{% endblock %}
{% block content %}
	{% for error in errors %}
		<div class='error'>
			{{error}}
		</div>
	{% endfor %}
	<div class="w-100 d-flex flex-column align-items-center">
		<h1 class="m-5">Récapitulatif</h1>
		<div
			class="w-auto d-flex flex-row justify-content-between align-items-center m-5">
			{# Menu card #}
			<div class="col m-5">
				<div class="card shadow-sm">
					{% if menu.price == 50 %}
						<img class="bd-placeholder-img" width="100%" height="225" src='../assets/images/Price50.jpg'/>
					{% elseif menu.price == 55 %}
						<img class="bd-placeholder-img" width="100%" height="225" src='../assets/images/Price55.jpg'/>
					{% elseif menu.price == 60 %}
						<img class="bd-placeholder-img" width="100%" height="225" src='../assets/images/Price60.jpg'/>
					{% elseif menu.price == 65 %}
						<img class="bd-placeholder-img" width="100%" height="225" src='../assets/images/Price65.jpg'/>
					{% elseif menu.price == 70 %}
						<img class="bd-placeholder-img" width="100%" height="225" src='../assets/images/Price70.jpg'/>
					{% elseif menu.price == 75 %}
						<img class="bd-placeholder-img" width="100%" height="225" src='../assets/images/Price75.jpg'/>
					{% else %}
						<img class="bd-placeholder-img" width="100%" height="225" src='../assets/images/other-price.jpg'/>
					{% endif %}
					<div class="card-body">
						<div class="d-flex justify-content-between">
							<h4 class="card-text">{{ menu.name }}</h4>
							<div class="rating d-flex flex-row">
								{% for i in range(1, 5) %}
									{% if i <= menu.rating %}
										<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill m-1" viewbox="0 0 16 16">
											<path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
										</svg>
									{% elseif i < menu.rating + 1 and i > menu.rating %}
										<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-half m-1" viewbox="0 0 16 16">
											<path d="M5.354 5.119 7.538.792A.516.516 0 0 1 8 .5c.183 0 .366.097.465.292l2.184 4.327 4.898.696A.537.537 0 0 1 16 6.32a.548.548 0 0 1-.17.445l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256a.52.52 0 0 1-.146.05c-.342.06-.668-.254-.6-.642l.83-4.73L.173 6.765a.55.55 0 0 1-.172-.403.58.58 0 0 1 .085-.302.513.513 0 0 1 .37-.245l4.898-.696zM8 12.027a.5.5 0 0 1 .232.056l3.686 1.894-.694-3.957a.565.565 0 0 1 .162-.505l2.907-2.77-4.052-.576a.525.525 0 0 1-.393-.288L8.001 2.223 8 2.226v9.8z"/>
										</svg>
									{% endif %}
								{% endfor %}
							</div>
						</div>
						<div class=" d-flex justify-content-start">
							{% for key, tag in menu["tags"] %}
								{% if key <4 %}
									<div class="tag-container mb-2 me-2">
										{{ tag.name }}
									</div>
								{% endif %}
							{% endfor %}
							{% if menu["tags"]|length > 4 %}
								...
							{% endif %}
						</div>
						<div class="d-flex justify-content-between align-items-center">
							<div class="btn-group">
								<button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#modal_{{menu.id}}">Voir ce menu</button>
								{# modal #}
								<div class="modal fade" id="modal_{{menu.id}}" tabindex="-1" role="dialog" aria-labelledby="modal_{{menu.id}}Title" aria-hidden="true">
									<div class="modal-dialog modal-dialog-centered" role="document">
										<div class="modal-content">
											<div class="modal-header">
												<h5 class="modal-title" id="exampleModalLongTitle">{{ menu.name }}</h5>
												<button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
													<span aria-hidden="true">&times;</span>
												</button>
											</div>
											<div class="modal-body">
												{% if menu.descr_appetizer %}
													<div class="bloc">
														<p class="section">Amuse bouche</p>
														<h4 class="card-text">{{menu.descr_appetizer}}</h4>
													</div>
												{% endif %}
												{% if menu.descr_starter %}
													<div class="bloc">
														<p class="section">Entrée</p>
														<h4 class="card-text">{{menu.descr_starter}}</h4>
													</div>
												{% endif %}
												{% if menu.descr_meal %}
													<div class="bloc">
														<p class="section">Plat principal</p>
														<h4 class="card-text">{{menu.descr_meal}}</h4>
													</div>
												{% endif %}
												{% if menu.descr_dessert %}
													<div class="bloc">
														<p class="section">Dessert</p>
														<h4 class="card-text">{{menu.descr_dessert}}</h4>
													</div>
												{% endif %}
												{% if menu.descr_cheese %}
													<div class="bloc">
														<p class="section">Fromage</p>
														<h4 class="card-text">{{menu.descr_cheese}}</h4>
													</div>
												{% endif %}
												{% if menu.descr_cuteness %}
													<div class="bloc">
														<p class="section">Mignardise</p>
														<h4 class="card-text">{{menu.descr_cuteness}}</h4>
													</div>
												{% endif %}
											</div>
											<div class="modal-footer">
												<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
											</div>
										</div>
									</div>
								</div>

							</div>
							<small class="text-muted ms-4">{{ menu.price }}
								€/ personne</small>
						</div>
					</div>
				</div>
			</div>
			{# Summary of client's conditions #}
			<form class="m-5 p-3 bg-light text-dark rounded" action="/bookingValidation?adress={{ adress }}&date={{ date }}&hour={{ hour }}&idMenu={{ menu.id }}" method="POST">
				Choix du nombre de personne :
				<br>
				<select class="m-2" id="nbMenu" name="nbMenu" value="{{ nbMenu }}">
					<option value="">Nombre de Personnes ({{ menu.price }}
						€/personne)</option>
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
				</select>
				<br>
				Adresse fournie :
				{{adress}}
				<br>
				Date fournie :
				{{date}}
				<br>
				Heure du repas :
				{{hour}}
				<br>
				Prix de la prestation à vide :
				{{pricePrestation}}
				€
				<br>
				<button class="btn btn-sm btn-outline-secondary m-2">Valider la commande</button>
			</form>
		</div>
	</div>
{% endblock %}
